@model WebThuongMaiDienTu.Models.DonHang

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutDashBoard.cshtml";
}

<link href="~/Content/css/Create.css" rel="stylesheet" />

<div class="container">
    <form action="@Url.Action("Edit", "DonHang")" method="post" enctype="multipart/form-data">
        <h2>Chỉnh Sửa Đơn Hàng</h2>

        <div class="form-group">
            <label for="maDonHang">Mã Đơn Hàng</label>
            <input type="text" id="maDonHang" name="maDonHang" class="form-control" value="@Model.maDonHang" readonly />
        </div>
        <div class="form-group">
            <label for="maKhachHang">Khách Hàng</label>
            <select id="maKhacHang" name="maKhacHang" class="form-control">
                @*lấy ra danh sách tên hãng từ Khách HÀng*@
                @foreach (var items in ViewBag.KhachHang)
                {
                    if (items != null)
                    {
                        <option value="@items.maKhachHang" selected>@items.hoTen</option>
                    }

                }
            </select>
        </div>

        <div class="form-group">
            <label for="ngayDatHang">Ngày Đặt Hàng</label>
            <input type="date" id="ngayDatHang" name="ngayDatHang" class="form-control" value="@Model.ngayDatHang" />
        </div>

        <div class="form-group">
            <label for="tongGiaTri">Tổng Giá Trị</label>
            <input type="number" id="tongGiaTri" name="tongGiaTri" class="form-control" value="@Model.tongGiaTri" />
        </div>

        <div class="form-group">
            <input type="submit" value="Lưu Sản Phẩm" class="btn btn-primary" />
            <a href="@Url.Action("Index", "DonHang")" class="btn btn-secondary">Quay lại</a>
        </div>
    </form>
</div>

