@model WebThuongMaiDienTu.Models.ChiTietDonHang

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutDashBoard.cshtml";
}

<link href="~/Content/css/Create.css" rel="stylesheet" />

<div class="container">
    <form action="@Url.Action("Edit", "ChiTietDonHang")" method="post" enctype="multipart/form-data">
        <h2>Chỉnh Sửa  Chi Tiết Đơn Hàng</h2>

        <div class="form-group">
            <label for="maChiTietDonHang">Mã Chi Tiết Đơn Hàng</label>
            <input type="text" id="maChiTietDonHang" name="maChiTietDonHang" class="form-control" value="@Model.maChiTietDonHang" readonly />
        </div>
        <div class="form-group">
            <label for="maDonHang">Mã Đơn Hàng</label>
            <input type="text" id="maDonHang" name="maDonHang" class="form-control" value="@Model.maDonHang" readonly />
        </div>
        <div class="form-group">
            <label for="maSanPham">Sản Phẩm</label>
            <select id="maSanPham" name="maSanPham" class="form-control">
                @*lấy ra danh sách tên sản phẩm từ bảng Sản Phẩm*@
                @foreach (var items in ViewBag.SanPham)
                {
                    if (items != null)
                    {
                        <option value="@items.maSanPham" selected>@items.tenSanPham</option>
                    }

                }
            </select>
        </div>

        <div class="form-group">
            <label for="soLuong">Số Lượng</label>
            <input type="number" id="soLuong" name="soLuong" class="form-control" value="@Model.soLuong" />
        </div>

        <div class="form-group">
            <label for="tongGiaTri">Tổng Giá Trị</label>
            <input type="number" id="tongGiaTri" name="tongGiaTri" class="form-control" value="@Model.donGia" />
        </div>

        <div class="form-group">
            <input type="submit" value="Lưu Sản Phẩm" class="btn btn-primary" />
            <a href="@Url.Action("Index", "ChiTietDonHang")" class="btn btn-secondary">Quay lại</a>
        </div>
    </form>
</div>

