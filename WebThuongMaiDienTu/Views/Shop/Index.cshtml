@model List<WebThuongMaiDienTu.Models.SanPham>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div class="maincontent-area">
    <div class="zigzag-bottom"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="latest-product">
                    <h2 class="section-title">Sản Phẩm mới</h2>
                    <div class="product-carousel">
                        @foreach (var items in Model)
                        {
                            <div class="single-product">
                                <div class="product-f-image">
                                    <img src="@items.hinhAnh" alt="" style="height:300px">
                                    <div class="product-hover">
                                        <a href="@Url.Action("Details", "Shop", new { maSanPham = items.maSanPham })" class="view-details-link">
                                            <i class="fa fa-link"></i> Xem chi Tiết
                                        </a>
                                    </div>
                                </div>

                                <h2><a href="#">@items.tenSanPham</a></h2>

                                <form action="@Url.Action("AddToCart", "Shop", new { maSanPham = items.maSanPham })" method="post">
                                    <!-- Input để chọn số lượng -->
                                    <input type="hidden" name="soLuong" value="1" />
                                    <!-- Nút thêm vào giỏ hàng -->
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fa fa-shopping-cart"></i> Thêm vào giỏ hàng
                                    </button>
                                </form>

                                <div class="product-carousel-price">
                                    <ins>@items.giaKhuyenMai</ins> <del>@items.giaBan</del>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> <!-- End main content area -->
