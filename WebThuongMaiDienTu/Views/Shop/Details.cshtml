@model WebThuongMaiDienTu.Models.SanPham

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutDetails.cshtml";
}
@using (Html.BeginForm("AddToCart", "Shop", FormMethod.Post))
{
    <div class="row">
        <div class="col-sm-6">
            <div class="product-images">
                <div class="product-main-img">
                    <img src="@Model.hinhAnh" alt="">
                </div>

                <div class="product-gallery">
                    <img src="img/product-thumb-1.jpg" alt="">
                    <img src="img/product-thumb-2.jpg" alt="">
                    <img src="img/product-thumb-3.jpg" alt="">
                </div>
            </div>
        </div>

        <!-- Sửa lỗi ở đây: Đóng thẻ <div> bị thiếu -->
        <div class="col-sm-6">
            <div class="product-inner">
                <h2 class="product-name">@Model.tenSanPham</h2>
                <div class="product-inner-price">
                    <ins>@Model.giaKhuyenMai</ins> <del>@Model.giaBan</del>
                </div>
                <!-- Thêm input ẩn để gửi maSanPham -->
                @Html.Hidden("maSanPham", Model.maSanPham)

                <div class="quantity">
                    <input type="number" size="4" class="input-text qty text" title="Qty" value="1" name="soLuong" min="1" step="1" id="soLuong">
                </div>
                <button class="add_to_cart_button" type="submit">Thêm Vào Giỏ Hàng</button>

                <div class="product-inner-category">
                    <p>Category: <a href="">Summer</a>. Tags: <a href="">awesome</a>, <a href="">best</a>, <a href="">sale</a>, <a href="">shoes</a>. </p>
                </div>

                <div role="tabpanel">
                    <ul class="product-tab" role="tablist">
                        <li role="presentation" class="active"><a href="#home" aria-controls="home" role="tab" data-toggle="tab">Description</a></li>
                    </ul>
                    <div class="tab-content">
                        <div role="tabpanel" class="tab-pane fade in active" id="home">
                            <h2>Product Description</h2>
                            <p>@Model.moTa</p>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
}

