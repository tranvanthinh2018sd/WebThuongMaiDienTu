@model List<WebThuongMaiDienTu.Models.SanPhamThongKeViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutDashBoard.cshtml";
}




<h2>Thống kê số lượng sản phẩm theo hãng</h2>

<div style="width: 80%; margin: auto;">
    <canvas id="productChart"></canvas>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        var ctx = document.getElementById('productChart').getContext('2d');
        var data = {
            labels: [@Html.Raw(string.Join(",", Model.Select(x => $"'{x.HangSanXuat}'")))],
            datasets: [{
                label: 'Số lượng sản phẩm',
                data: [@string.Join(",", Model.Select(x => x.SoLuongSanPham))],
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(153, 102, 255, 0.2)',
                    'rgba(255, 159, 64, 0.2)'
                ],
                borderColor: [
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)'
                ],
                borderWidth: 1
            }]
        };
        var myChart = new Chart(ctx, {
            type: 'bar',
            data: data,
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                },
                responsive: true,
                plugins: {
                    legend: {
                        position: 'top',
                    },
                    title: {
                        display: true,
                        text: 'Thống kê số lượng sản phẩm theo hãng'
                    }
                }
            }
        });
    });
</script>


