@model WebThuongMaiDienTu.Models.GioHang

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutDashBoard.cshtml";
}

<link href="~/Content/css/Create.css" rel="stylesheet" />

<div class="container">
    <form action="@Url.Action("Edit", "GioHang")" method="post" enctype="multipart/form-data">
        <h2>Chỉnh Sửa Giỏ Hàng</h2>

        <div class="form-group">
            <label for="maGioHang">Mã Giỏ Hàng</label>
            <input type="text" id="maGioHang" name="maGioHang" class="form-control" value="@Model.maGioHang" readonly />
        </div>
        <div class="form-group">
            <label for="maKhachHang">Khách Hàng</label>
            <select id="maKhacHang" name="maKhacHang" class="form-control">
                @*lấy ra danh sách tên hãng từ Khách HÀng*@
                @foreach (var items in ViewBag.KhachHang)
                {
                    if (items != null)
                    {
                        <option value="@items.maKhachHang" selected>@items.hoTen</option>
                    }

                }
            </select>
        </div>

        <div class="form-group">
            <label for="ngayTao">Ngày Tạo</label>
            <input type="date" id="ngayTao" name="ngayTao" class="form-control" value="@Model.ngayTao" />
        </div>

        <div class="form-group">
            <input type="submit" value="Lưu Sản Phẩm" class="btn btn-primary" />
            <a href="@Url.Action("Index", "GioHang")" class="btn btn-secondary">Quay lại</a>
        </div>
    </form>
</div>

